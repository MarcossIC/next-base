{
 "extends": [
  "eslint:recommended",
  "next",
  "prettier",
  "plugin:jest/recommended",
  "plugin:storybook/recommended"
 ],
 "plugins": [
  "prettier"
 ],
 "env": {
  "jest": true,
  "browser": true
 },
 "rules": {
  "no-unused-vars": [
   "error",
   {
    "vars": "local",
    "varsIgnorePattern": "^_",
    "args": "none",
    "argsIgnorePattern": "[iI]gnored",
    "caughtErrors": "all",
    "destructuredArrayIgnorePattern": "^_",
    "ignoreRestSiblings": true
   }
  ],
  "no-empty-pattern": [
   "error",
   {
    "allowObjectPatternsAsParameters": false
   }
  ],
  "react-hooks/rules-of-hooks": "off",
  "react-hooks/exhaustive-deps": "off",
  "no-undef": [
   "warn",
   {
    "typeof": false
   }
  ]
 },
 "overrides": [
  {
   "files": [
    "__test__/**/*.*"
   ],
   "plugins": [
    "jest",
    "testing-library"
   ],
   "env": {
    "jest/globals": true
   }
  }
 ]
}
