{
	"name": "next-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"format": "prettier \"src/app/**/*.{js,jsx,ts,tsx,json}\" \"./*.{js,cjs,ts,json}\" --check --ignore-path .gitignore .",
		"format:fix": "prettier \"src/app/**/*.{js,jsx,ts,tsx,json}\" \"./*.{js,cjs,ts,json}\" --write --ignore-path .gitignore .",
		"prepare": "node setup-husky.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci"
	},
	"lint-staged": {
		"src/app/**/*.{js,jsx,ts,tsx,json}": [
			"prettier --write --ignore-path .gitignore .",
			"next lint --ignore-pattern '.eslintignore'"
		],
		"./*.{js,ts,json}": [
			"prettier --write --ignore-path .gitignore .",
			"next lint --ignore-pattern '.eslintignore'"
		]
	},
	"dependencies": {
		"formik": "2.4.5",
		"next": "14.2.5",
		"react": "^18",
		"react-dom": "^18",
		"sharp": "^0.33.4",
		"zod": "3.23.8",
		"zustand": "4.5.4"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.4.8",
		"@testing-library/react": "^16.0.0",
		"@types/jest": "^29.5.12",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@typescript-eslint/eslint-plugin": "7.16.1",
		"eslint": "^8",
		"eslint-config-next": "14.2.5",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-jest-dom": "^5.4.0",
		"eslint-plugin-prettier": "5.2.1",
		"eslint-plugin-testing-library": "^6.2.2",
		"husky": "9.0.11",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "15.2.7",
		"postcss": "^8",
		"prettier": "3.3.3",
		"tailwindcss": "^3.4.1",
		"ts-jest": "^29.2.4",
		"ts-node": "^10.9.2",
		"typescript": "^5"
	}
}
